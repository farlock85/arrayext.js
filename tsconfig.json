{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "esnext",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": false,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"]
    },
    "exclude": ["test/**/*.ts"]
}
